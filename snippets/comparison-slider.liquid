{%- style -%}
  img-comparison-slider {
    max-width: 100%;
    height: auto;
  }
  img-comparison-slider img {
    max-width: 100%;
    height: auto;
  }
  img-comparison-slider:focus-visible {
    outline: unset;
    outline-offset: 0;
    box-shadow: unset;
  }
  .slider-relative-size {
    --default-handle-width: 100px;
  }
  .slider-relative-size:hover {
    --default-handle-width: 120px;
    transition: ease .2s;
  }
  @media (max-width: 767px) {
    img-comparison-slider img {
      max-width: 340%;
      margin: 0 -120%;
    }
  }
  
{%- endstyle -%}
<div class="comparison-slider">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <script
          defer
          src="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/index.js"
        ></script>
        <link
          rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/styles.css"
        />
        <img-comparison-slider class="slider-relative-size">
          <img slot="first" src="{{ 'compara-slider-01.jpg' | asset_url }}" width="1800" height="600"/>
          <img slot="second" src="{{ 'compara-slider-02.jpg' | asset_url }}" width="1800" height="600"/>
        </img-comparison-slider>
      </div>
    </div>
  </div>
</div>