{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .video-player {
    border-radius: 12px;
    aspect-ratio: 360 / 640;
    max-width: 100%;
    width: 100%;
    height: auto;
  }

{%- endstyle -%}
<div class="multicolumn-video">
  <div class="container section-{{ section.id }}-padding">
    <div class="row">
      <div class="col-12">
      {%- unless section.settings.title == blank -%}
        <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin multicolumn__title">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        </div>
      {%- endunless -%}
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-6">
        <iframe title="vimeo-player" src="https://player.vimeo.com/video/986029270?byline=0&title=0&portrait=0" width="360" height="640" frameborder="0" allowfullscreen class="video-player"></iframe>
      </div>
      <div class="col-lg-3 col-6">
        <iframe title="vimeo-player" src="https://player.vimeo.com/video/1004182753?byline=0&title=0&portrait=0" width="360" height="640" frameborder="0" allowfullscreen class="video-player"></iframe>
      </div>
      <div class="col-lg-3 col-6">
        <iframe title="vimeo-player" src="https://player.vimeo.com/video/919149547?byline=0&title=0&portrait=0" width="360" height="640" frameborder="0" allowfullscreen class="video-player"></iframe>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.multicolumn-video.name",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.multicolumn-video.settings.title.default",
      "label": "t:sections.multicolumn-video.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.multicolumn-video.presets.name"
    }
  ]
}
{% endschema %}