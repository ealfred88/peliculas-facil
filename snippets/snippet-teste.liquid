{%- style -%}
  img-comparison-slider,
  img-comparison-slider img {
    max-width: 100%;
    height: auto;
  }
{%- endstyle -%}
<div class="snippet-teste">
  <div class="container">
    <div class="row">
      <div class="col-6">
        <h2>Snippet Teste</h2>
      </div>
      <div class="col-12">
        <script
          defer
          src="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/index.js"
        ></script>
        <link
          rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/img-comparison-slider@8/dist/styles.css"
        />
        <img-comparison-slider>
          <img slot="first" src="{{ 'compara-slider-01.jpg' | asset_url }}" width="1800" height="600"/>
          <img slot="second" src="{{ 'compara-slider-02.jpg' | asset_url }}" width="1800" height="600"/>
        </img-comparison-slider>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="busca-aberta">
          <form action="/search" method="get" role="search">
            <input type="search" name="q" placeholder="Pesquisar na loja..." aria-label="Campo de busca" value="{{ search.terms | escape }}" />
            <button type="submit" aria-label="Buscar">
              <span>🔍</span>
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        {% render 'header-search', input_id: 'snippet-teste'%}
      </div>
    </div>
  </div>
</div>